# AI Service Environment Variables

# Core Service Configuration
NODE_ENV=development
PORT=3002
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://omnifit:omnifit_dev@localhost:5432/omnifit_db

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Social Media API Keys
# Twitter API v2 (get from developer.twitter.com)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# Telegram Bot API (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_channel_or_group_id

# LinkedIn API (get from LinkedIn Developer Portal)
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here
LINKEDIN_ORG_ID=your_linkedin_organization_id

# Email Service (choose one)
SENDGRID_API_KEY=your_sendgrid_api_key_here
MAILCHIMP_API_KEY=your_mailchimp_api_key_here

# Redis for caching and job queues
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info