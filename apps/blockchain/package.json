{
  "name": "@omnifit/blockchain",
  "version": "1.0.0",
  "description": "OmniFit Blockchain - Solana Integration Scripts & Anchor Clients",
  "private": true,
  "scripts": {
    "dev": "tsx watch scripts/dev-server.ts",
    "build": "tsc",
    "start": "node dist/scripts/dev-server.js",
    "lint": "eslint src scripts --ext .ts --fix",
    "lint:fix": "eslint src scripts --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "devnet:setup": "tsx scripts/devnet-setup.ts",
    "devnet:mint": "tsx scripts/create-mint.ts",
    "devnet:fund": "tsx scripts/fund-account.ts",
    "devnet:test": "tsx scripts/test-transactions.ts"
  },
  "dependencies": {
    "@solana/web3.js": "^1.78.8",
    "@solana/spl-token": "^0.3.8",
    "@coral-xyz/anchor": "^0.29.0",
    "@metaplex-foundation/mpl-token-metadata": "^3.1.1",
    "bs58": "^5.0.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "zod": "^3.22.4",
    "@omnifit/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}