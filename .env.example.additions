# Additional Environment Variables for Extended OmniFit Features

# AI Service Configuration (add to apps/ai/.env)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Social Media API Keys
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_channel_or_group_id
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here
LINKEDIN_ORG_ID=your_linkedin_organization_id

# Email Service (choose one)
SENDGRID_API_KEY=your_sendgrid_api_key_here
MAILCHIMP_API_KEY=your_mailchimp_api_key_here

# Backend Configuration (add to apps/backend/.env)
AI_SERVICE_URL=http://localhost:3002
AI_AUTO_APPROVE_THRESHOLD=0.85
AI_AUTO_REJECT_THRESHOLD=0.3
AI_HUMAN_REVIEW_THRESHOLD=0.6

# Blockchain Configuration (add to apps/blockchain/.env)
SOLANA_CLUSTER=devnet
MINT_AUTHORITY_KEYPAIR_PATH=/path/to/your/keypair.json
TOKEN_MINT_ADDRESS=your_token_mint_address_here
MAINNET_RPC_URL=https://api.mainnet-beta.solana.com

# Redis Configuration (if using separate Redis instance)
REDIS_URL=redis://localhost:6379

# Logging and Monitoring
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100